    <body ng-app='316Beauty' ng-controller='ProfileController' class="scroll-assist">
        {{>nav}}
        <div class="main-container">

            <div class="page-header text-center">
                <h1><span class="fa fa-anchor"></span> Profile Page</h1>
                <a href="/logout" class="btn btn-default btn-sm">Logout</a>
            </div>

            <div class="row">

                <div class="col-sm-6">
                    <div class="well">
                        <h3><span class="fa fa-user"></span> Local</h3>

                        {{#user.local.email}}
                            <p>
                                <strong>id</strong>:  {{user._id}} <br>
                                <strong>email</strong>: {{user.local.email}} <br>
                                <strong>password</strong>: {{user.local.password}}
                            </p>
                        
                            <a href="/account/unlink/local" class="btn btn-default">Unlink</a>
                        {{/user.local.email}}
                        {{^user.local.email}}
                            <a href="/account/connect-local" class="btn btn-default">Connect Local</a>
                        {{/user.local.email}}

                    </div>
                </div>

                <!-- FACEBOOK INFORMATION -->
                <div class="col-sm-6">
                    <div class="well">
                        <h3 class="text-primary"><span class="fa fa-facebook"></span> Facebook</h3>

                        {{#user.facebook.token}}
                            <p>
                                <strong>id</strong>: {{user.facebook.id}} <br>
                                <strong>token</strong>: {{user.facebook.token}} <br>
                                <strong>email</strong>: {{user.facebook.email}} <br>
                                <strong>name</strong>: {{user.facebook.name}} <br>
                            </p>

                            <a href="/account/unlink/facebook" class="btn btn-primary">Unlink</a>
                        {{/user.facebook.token}}
                        {{^user.facebook.token}}
                            <a href="/account/connect/facebook" class="btn btn-primary">Connect Facebook</a>
                        {{/user.facebook.token}}

                    </div>
                </div>

            </div>
                
            <div class="row">
                <div class="col-sm-6">
                    <div class="well">
                        <h3 class="text-primary"><span class="fa fa-instagram"></span> Instagram</h3>

                        {{#user.instagram.token}}
                            <p>
                                <strong>id</strong>: {{user.instagram.id}} <br>
                                <strong>token</strong>: {{user.instagram.token}} <br>
                                <strong>displayName</strong>: {{user.instagram.displayName}} <br>
                                <strong>username</strong>: {{user.instagram.username}} <br>
                            </p>

                            <a href="/account/unlink/instagram" class="btn btn-primary">Unlink</a>
                        {{/user.instagram.token}}
                        {{^user.instagram.token}}
                            <a href="/account/connect/instagram" class="btn btn-primary">Connect Instagram</a>
                        {{/user.instagram.token}}

                    </div>
                </div>
