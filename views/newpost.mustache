<!doctype html>
<html lang="en">
    <head>
        {{>head}}
    </head>
    <body ng-app="316Beauty" ng-controller="NewPostController" ng-init="init()" class="scroll-assist">
        {{>nav}}
        <div class="main-container">
            <section class="page-title page-title-4 bg-secondary">
                <div class="container">
                    <div class="row">
                        <div class="col-md-6">
                            <h3 class="uppercase mb0">New Post</h3>
                        </div>
                        <div class="col-md-6 text-right">
                            <p>Share your thoughts with the community at 31.6 Beauty</p>
                        </div>
                    </div>
                </div>
            </section>
            <section>
                <div class="container">
                    <div class="row">
                        <div class="col-sm-10 col-sm-offset-1">
                            <div class="comments">                                
                                <h5 class="uppercase">Add a Title, Image &amp; Body</h5>
                                <cl-image ng-if="post.image != '' " public-id="<%post.image%>" class="thumbnail inline" format="jpg">
                                    <cl-transformation height="300" width="300" crop="fill" />
                                </cl-image>
                                <input ng-model="post.title" name="name" type="text" placeholder="Title" />
                                <textarea ng-model="post.body" rows="5" placeholder="Body"></textarea>
                                <div id="direct_upload" 
                                        ngf-drop="uploadFiles($files, $index)"
                                        ngf-drag-over-class="dragOverClass($event)"
                                        ng-model="files"
                                        ng-multiple="true">
                                        <form>
                                            <div class="form_line">
                                                <div class="form_controls">
                                                    <div>
                                                        <a class="btn btn-md" ngf-select="uploadFiles($files, $index)" multiple title="upload" resetOnClick="true" ><span class="fa fa-picture-o"></span> Upload Image</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>                                        
                                    </div>
                                <a ng-click="createPost()" class="btn btn-lg btn-filled">Save</a>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            {{>footer}}
        </div>
       {{>scripts}}
    </body>
</html>