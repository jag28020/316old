<!doctype html>
<html lang="en">
    <head>
       {{>head}}
    </head>
    <body ng-app="316Beauty" ng-controller="FeedController" ng-init="init()" class="scroll-assist">
        {{>nav}}
        <div class="main-container">

            <section class="page-title page-title-4 bg-secondary">
                <div class="container">
                    <div class="row">
                        <div class="col-md-6">
                            <h3 class="uppercase mb0">Post Feed</h3>
                        </div>
                        <div class="col-md-6 text-right">
                            <a href="/newpost" class="btn btn-rounded btn-lg">Create Post</a>
                        </div>
                    </div>
                </div>
            </section>

            <section>
                <div class="container">
                    <div ng-repeat="post in feed track by $index" class="feed-item mb96 mb-xs-48">
                        <a href="/post?id=<%post.id%>">
                            <div class="row mb16 mb-xs-0">
                                <div class="col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1 text-center">
                                    <h6 class="uppercase mb16 mb-xs-8"><% post.timestamp | date : 'longDate' %></h6>
                                    <h3><% post.title %></h3>
                                </div>
                            </div>
                            <div class="row mb32 mb-xs-16">
                                <div class="col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1">
                                    <cl-image alt="Article Image" public-id="<%post.image%>" class=" inline mb32 mb-xs-16" format="jpg">
                                        <cl-transformation height="500" width="750" crop="fill" />
                                    </cl-image>
                                    <p class="lead">
                                        <%post.body%>
                                    </p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1 text-center">
                                    <a class="mb48 mb-xs-32 btn btn-lg" href="#">Share Article</a>
                                    <hr>
                                </div>
                            </div>
                        </a>
                    </div>
                    
                </div>
                <!--end of container-->
            </section>
            {{>footer}}
        </div>
        {{>scripts}}
    </body>
</html>