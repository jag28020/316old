<!doctype html>
<html lang="en">
    <head>
       {{>head}}
       {{>scripts}}
    </head>
    <body ng-app='316Beauty' ng-controller='LoginController' ng-init='init()' class="scroll-assist">
        {{>nav}}
        <div class="main-container">
            <section class="cover fullscreen image-bg overlay">
                <div class="background-image-holder">
                    <img alt="image" class="background-image" src="img/home12.jpg" />
                </div>
                <div class="container v-align-transform">
                    <div class="row">
                        <div class="col-md-4 col-md-offset-4 col-sm-8 col-sm-offset-2">
                            <div ng-show='showLogin' class="feature bordered text-center">
                                <h4 class="uppercase">Login Here</h4>
                                <form class="text-left">
                                    <input ng-model='profile.email' class="mb0" type="text" placeholder="Email" />
                                    <input ng-model='profile.password' class="mb0" type="password" placeholder="Password" />
                                    <button ng-click='login()' type="submit" >Login</button>
                                </form>
                                <p class="mb0">New user?
                                    <a ng-click='toggleLogin()' href="#">Click Here To Register</a>
                                </p>
                            </div>
                            <div ng-show='!showLogin' class="feature bordered text-center">
                                <h4 class="uppercase">Register Here</h4>
                                <form class="text-left">
                                    <input ng-model='profile.email' class="mb0" type="text" placeholder="Email" />
                                    <input ng-model='profile.password' class="mb0" type="password" placeholder="Password" />
                                    <button ng-click='register()' type="submit" >Register</button>
                                </form>
                                <p class="mb0">Returning user?
                                    <a ng-click='toggleLogin()' href="#">Click Here To Login</a>
                                </p>
                            </div>
                        </div>
                    </div>
                    <!--end of row-->
                </div>
                <!--end of container-->
            </section>
            {{>footer}}
        </div>
    </body>
</html>