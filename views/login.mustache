<!doctype html>
<html lang="en">
    <head>
       {{>head}}
       {{>scripts}}
    </head>
    <body ng-app='316Beauty' ng-controller='LoginController' ng-init='init()' class="scroll-assist">
        {{>nav}}
        <div class="main-container">
            <section class="cover fullscreen image-bg overlay">
                <div class="background-image-holder">
                    <img alt="image" class="background-image" src="img/home12.jpg" />
                </div>
                <div class="container v-align-transform">
                    <div class="row">
                        <div class="col-md-4 col-md-offset-4 col-sm-8 col-sm-offset-2">
                            <div class="feature bordered text-center">
                                <h1><i class="fa fa-sign-in"></i> Login</h1>
                                {{#message}}
                                  <div class="alert alert-danger">{{ message }}</div>
                                {{/message}}
                                <form action="/account/login" method="post">
                                    <input type="text" class="form-control" name="email" placeholder="Email">
                                    <input type="password" class="form-control" name="password" placeholder="Password">
                                    <button type="submit" class="btn btn-filled btn-warning btn-lg">Login</button>
                                </form>
                                <div class="row">
                                    <a href="/auth/facebook" class="btn btn-filled btn-warning btn-md"><i class="icon-xs fa fa-facebook"></i></a>
                                    <a href="/auth/instagram" class="btn btn-filled btn-warning btn-md"><i class="icon-xs fa fa-instagram"></i></a>
                                </div>
                                <hr>
                                <p>Need an account? <a href="/signup">Signup</a></p>
                            </div>
                        </div>
                    </div>
                    <!--end of row-->
                </div>
                <!--end of container-->
            </section>
            {{>footer}}
        </div>
    </body>
</html>